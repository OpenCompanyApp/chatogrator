{
    "name": "opencompany/chatogrator",
    "description": "Chatogrator â€” build multi-platform chat bots with a single unified API. Supports Slack, Discord, Teams, Google Chat, GitHub, and Linear.",
    "license": "MIT",
    "authors": [
        {
            "name": "OpenCompany",
            "homepage": "https://github.com/OpenCompanyApp"
        }
    ],
    "keywords": ["laravel", "chat", "slack", "discord", "teams", "google-chat", "github", "linear", "chatbot", "webhook", "chatogrator", "aggregator"],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0 || ^12.0",
        "illuminate/http": "^11.0 || ^12.0",
        "illuminate/cache": "^11.0 || ^12.0",
        "illuminate/routing": "^11.0 || ^12.0",
        "psr/log": "^1.0 || ^2.0 || ^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0 || ^10.0",
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.1"
    },
    "suggest": {
        "ratchet/pawl": "Required for Discord Gateway WebSocket (chat:discord-gateway command)",
        "ext-sodium": "Required for Discord adapter (Ed25519 signature verification)"
    },
    "autoload": {
        "psr-4": {
            "OpenCompany\\Chatogrator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenCompany\\Chatogrator\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "OpenCompany\\Chatogrator\\ChatServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
